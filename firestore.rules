rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- User data: only the owner can read/write ---
    match /users/{userId} {

      // Profile: owner reads/writes
      match /profile {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Graph data (existing subcollections): owner only
      match /data/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Friends list: owner reads/writes
      match /friends/{friendId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // --- Wiki groups ---

    // Helper: true if the caller has a membership doc in this group.
    function isGroupMember(groupId) {
      return request.auth != null
        && exists(/databases/$(database)/documents/wikiGroups/$(groupId)/members/$(request.auth.uid));
    }

    // Members list: any authed user can read, only own doc writable.
    match /wikiGroups/{groupId}/members/{memberId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == memberId;
    }

    // Network health state: group members can read/write.
    match /wikiGroups/{groupId}/networkState/{docId} {
      allow read, write: if isGroupMember(groupId);
    }

    // Catastrophe events: group members can read/write.
    match /wikiGroups/{groupId}/events/{eventId} {
      allow read, write: if isGroupMember(groupId);
    }

    // Concept clusters: group members can read/write.
    match /wikiGroups/{groupId}/clusters/{clusterId} {
      allow read, write: if isGroupMember(groupId);
    }

    // Repair missions: group members can read/write.
    match /wikiGroups/{groupId}/missions/{missionId} {
      allow read, write: if isGroupMember(groupId);
    }

    // Member mastery snapshots: group members can read all,
    // but only the owner can write their own snapshot.
    match /wikiGroups/{groupId}/memberSnapshots/{uid} {
      allow read: if isGroupMember(groupId);
      allow write: if isGroupMember(groupId) && request.auth.uid == uid;
    }

    // Team goals: group members can read all, create own, update contributions.
    match /wikiGroups/{groupId}/goals/{goalId} {
      allow read: if isGroupMember(groupId);
      allow create: if isGroupMember(groupId)
        && request.resource.data.createdByUid == request.auth.uid;
      allow update: if isGroupMember(groupId);
    }

    // Glory board: group members can read all, create and update any entry
    // (cooperative system awards points across team members).
    // No delete â€” glory entries are permanent.
    match /wikiGroups/{groupId}/glory/{uid} {
      allow read: if isGroupMember(groupId);
      allow create, update: if isGroupMember(groupId);
    }

    // --- Social: challenges ---
    // Path matches code: social/challenges/items/{challengeId}
    match /social/challenges/items/{challengeId} {
      // Sender or receiver can read
      allow read: if request.auth != null
        && (resource.data.fromUid == request.auth.uid
            || resource.data.toUid == request.auth.uid);
      // Any authed user can create (fromUid must match)
      allow create: if request.auth != null
        && request.resource.data.fromUid == request.auth.uid;
      // Receiver can only update status and score fields
      allow update: if request.auth != null
        && resource.data.toUid == request.auth.uid
        && request.resource.data.diff(resource.data).affectedKeys()
           .hasOnly(['status', 'score']);
    }

    // --- Social: nudges ---
    // Path matches code: social/nudges/items/{nudgeId}
    match /social/nudges/items/{nudgeId} {
      // Sender or receiver can read
      allow read: if request.auth != null
        && (resource.data.fromUid == request.auth.uid
            || resource.data.toUid == request.auth.uid);
      // Any authed user can create (fromUid must match)
      allow create: if request.auth != null
        && request.resource.data.fromUid == request.auth.uid;
      // Receiver can only update status field
      allow update: if request.auth != null
        && resource.data.toUid == request.auth.uid
        && request.resource.data.diff(resource.data).affectedKeys()
           .hasOnly(['status']);
    }
  }
}
